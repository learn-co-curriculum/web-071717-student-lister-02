<%= flash[:message] %>
<%= form_tag login_path, class: 'ui form'  do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :'user[username]' %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :'user[password]' %>
  </div>
  <div class="field">
    <%= submit_tag 'Log in', class: 'ui big green basic button' %>
  </div>
<% end %>
